<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.earth.angel.regist.ForgotPasswordActivity"/>
        <variable
            name="handler"
            type="ForgotPasswordActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".regist.ForgotPasswordActivity">
        <include layout="@layout/include_top_bar"/>
        <TextView
            android:id="@+id/tvPhoneText"
            android:layout_marginRight="@dimen/base_page"
            android:layout_marginLeft="@dimen/base_page"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlTopToolbar"
            android:fontFamily="@font/avenirnext_regular"
            style="@style/Theme.BaseTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="We will send a verification code to your email address to help you retrieve your password"
            android:textColor="#ff9d9d9d"
            android:textSize="14sp"
            />
        <com.earth.libbase.util.EmailAutoCompleteTextView
            android:layout_marginTop="@dimen/_30sdp"
            android:id="@+id/etPhoneEmail"
            style="@style/UserSign.InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_page"
            android:fontFamily="@font/avenirnext_regular"
            android:hint="Enter Your Email"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="#FF9D9D9D"
            android:layout_marginLeft="@dimen/base_page"
            android:background="@drawable/bg_regist_8"
            android:textColorHint="#FF9D9D9D"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Button
            android:layout_marginRight="@dimen/page_space"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/codeSend"
            app:layout_constraintBottom_toBottomOf="@+id/etPhoneEmail"
            app:layout_constraintTop_toTopOf="@+id/etPhoneEmail"
            android:text="Send"
            android:background="@null"
            android:button="@null"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#FF555555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            app:layout_constraintTop_toBottomOf="@+id/etPhoneEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CoordinatorLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <TextView
            android:layout_marginBottom="@dimen/_100sdp"
            android:paddingTop="@dimen/btn_margin"
            android:paddingBottom="@dimen/btn_margin"
            android:layout_marginRight="@dimen/base_page"
            android:layout_marginLeft="@dimen/base_page"
            android:background="@drawable/bg_corners_shopp_28"
            android:gravity="center"
            android:fontFamily="@font/avenirnext_latobold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/nextBtn"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
