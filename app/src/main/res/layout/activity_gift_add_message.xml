<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
        <variable
            name="handler"
            type="com.earth.angel.gift.ui.GiftAddMessageActivity" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gift.ui.GiftAddMessageActivity">
    <include layout="@layout/include_top_bar"/>
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlTopToolbar"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_you_name"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:id="@+id/etName"
        style="@style/UserSign.InputText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Your name (easier to recognize for friends)"
        android:textColor="#ff9a9a9a"
        android:textSize="14sp"
        />
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_info"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:id="@+id/etContactInfo"
        style="@style/UserSign.InputText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Contact info"
        android:textColor="#ff9a9a9a"
        android:textSize="14sp"
        />
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etContactInfo"
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_message"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:id="@+id/etMessage"
        style="@style/UserSign.InputText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message"
        android:layout_width="0dp"
        android:singleLine="false"
        android:gravity="top"
        android:lines="4"
        android:layout_height="wrap_content"
        android:hint="Recommend to communicate via Messenger, Whatsapp, email. You can also message to the item owner here (visible to the owner only)"
        android:textColor="#ff9a9a9a"
        android:textSize="14sp"
        />
    <Button
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_45sdp"
        android:text="Submit"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/etMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_corner_group_join"
        android:id="@+id/btSaveShare"
        android:textColor="@android:color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>