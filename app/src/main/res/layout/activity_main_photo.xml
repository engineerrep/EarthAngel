<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <variable
            name="handler"
            type="com.earth.angel.MainPhotoActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:background="@color/themColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/llMainPhoto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/page_space"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ll_tab_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/llone"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_alignParentTop="true"
                    android:id="@+id/iv_tab_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/gift_main_unselect"/>

                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/tv_tab_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:text="ECO GIFTS"/>
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toRightOf="@+id/llone"
                android:id="@+id/tvNumFriendOne"
                android:gravity="center"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:background="@drawable/circle_red"
                android:layout_width="@dimen/message_size"
                android:layout_height="@dimen/message_size"/>
        </RelativeLayout>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <RelativeLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/page_space"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ll_tab_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/llfive"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:id="@+id/iv_tab_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/earth_my"/>

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/tv_tab_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:text="STATUS"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/_4sdp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/llfive"
                android:id="@+id/tvNumFriend"
                android:gravity="center"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:background="@drawable/circle_red"
                android:layout_width="@dimen/message_size"
                android:layout_height="@dimen/message_size"/>
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            app:layout_constraintTop_toBottomOf="@+id/llMainPhoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="0.7"
                android:id="@+id/llPhoto"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/llMainPhoto"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <androidx.constraintlayout.helper.widget.Layer
                    android:id="@+id/lyMain"
                    android:background="@drawable/bg_white_bottom_16sp"
                    app:layout_constraintTop_toTopOf="@+id/tvLinePhone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:constraint_referenced_ids="tvLinePhone,tvReminder,tvUpload,llPost,llShare,tvBottomLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.constraintlayout.helper.widget.Layer>
                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/ivEditPhoto"
                    android:src="@mipmap/edit_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/page_space"
                    android:layout_marginRight="@dimen/page_space"
                    android:id="@+id/tvLinePhone"
                    app:layout_constraintBottom_toBottomOf="@+id/ivEditPhoto"
                    app:layout_constraintTop_toTopOf="@+id/ivEditPhoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></TextView>
                <TextView
                    android:id="@+id/tvReminder"
                    app:layout_constraintTop_toBottomOf="@+id/ivEditPhoto"
                    app:layout_constraintEnd_toEndOf="@+id/ivEditPhoto"
                    app:layout_constraintStart_toStartOf="@+id/ivEditPhoto"
                    app:layout_constraintBottom_toTopOf="@+id/tvUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminder"
                    android:textColor="#FF505050"
                    android:textSize="18sp"
                    />

                <TextView
                    app:layout_constraintBottom_toTopOf="@+id/llPost"
                    app:layout_constraintTop_toBottomOf="@+id/tvReminder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/tvUpload"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="#ff838383"
                    android:layout_marginLeft="@dimen/_46sdp"
                    android:layout_marginRight="@dimen/_46sdp"
                    android:textSize="14sp"
                    />

                <LinearLayout
                    app:layout_constraintBottom_toTopOf="@+id/llShare"
                    app:layout_constraintTop_toBottomOf="@+id/tvUpload"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="@dimen/_46sdp"
                    android:layout_marginRight="@dimen/_46sdp"
                    android:id="@+id/llPost"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/shape_corner_group_gift"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/post_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="@string/label_Post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/tvBottomLine"
                    app:layout_constraintTop_toBottomOf="@+id/llPost"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/llShare"
                    android:layout_marginLeft="@dimen/_46sdp"
                    android:layout_marginRight="@dimen/_46sdp"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/shape_corner_group_joined"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/post_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ImageView>
                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/themColor"
                        android:textSize="16sp"
                        android:lines="1"
                        android:text="@string/label_Post_Share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:id="@+id/tvBottomLine"
                    android:layout_marginLeft="@dimen/page_space"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_white_bottom_16sp"
                android:layout_marginBottom="@dimen/_26sdp"
                android:layout_marginLeft="@dimen/page_space"
                android:layout_marginRight="@dimen/page_space"
                android:layout_weight="0.3"
                app:layout_constraintTop_toBottomOf="@+id/llPhoto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:padding="@dimen/_10sdp"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivMainEC"
                        android:src="@mipmap/main_eco_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ImageView>
                    <TextView
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:id="@+id/tvEnvironmental"
                        app:layout_constraintTop_toTopOf="@+id/ivMainEC"
                        app:layout_constraintStart_toEndOf="@+id/ivMainEC"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/ivMainEC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Here are the eco gifts others shared"
                        android:textColor="#ff838383"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOnePopularity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </LinearLayout>


        </LinearLayout>
        <View
            android:visibility="gone"
            android:id="@+id/view_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.6"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


