<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <import type="com.earth.angel.appphoto.PhotoEditActivity" />

    <variable
        name="handler"
        type="PhotoEditActivity" />
</data>
<androidx.core.widget.NestedScrollView
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".appphoto.PhotoEditActivity">
        <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rlTopToolbarPhoto"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/tool_bar_min_height">

            <ImageView
                android:id="@+id/tvLeftToolPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@mipmap/bank" />

            <TextView
                android:id="@+id/tvTitleCenterPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF111111"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:gravity="center"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/toolbarTabRightPhoto"
                style="@style/Theme.ToolBar.MenuTextView"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="#FF656565"
                android:layout_marginEnd="@dimen/_15sdp"
                android:padding="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/ivRightToolPhoto"
                style="@style/Theme.ToolBar.MenuImageView"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:padding="@dimen/_10sdp" />

        </RelativeLayout>

        <View
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlTopToolbarPhoto"
            android:id="@+id/line"
            android:background="@color/line_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:id="@+id/tvPhotoTitle"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_photo_upload"
            android:textColor="#ff323232"
            android:textSize="14sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photo_rlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPhotoTitle" />

        <TextView
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingLeft="@dimen/page_space"
            android:paddingRight="@dimen/page_space"
            android:id="@+id/tvContentIv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photo_rlv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_edit_picture"
            android:textColor="#FF999999"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tvOptional"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContentIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_photo_description"
            android:layout_marginRight="@dimen/page_space"
            android:textColor="#ff343434"
            android:textSize="18sp"
            />
        <androidx.constraintlayout.helper.widget.Layer
            android:background="@drawable/shape_corner_edit"
            app:constraint_referenced_ids="et_description,tv_num,tv_all"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOptional"
            android:id="@+id/lay_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_description"
            style="@style/AppTheme.EditText"
            android:gravity="top|left"
            android:lines="3"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/page_space"
            android:layout_marginRight="@dimen/page_space"
            android:padding="@dimen/_6sdp"
            android:scrollbars="vertical"
            android:hint="@string/text_Describe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOptional" />


        <TextView
            android:paddingTop="@dimen/_4sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:gravity="right"
            android:id="@+id/tv_num"
            app:layout_constraintEnd_toStartOf="@+id/tv_all"
            app:layout_constraintTop_toBottomOf="@+id/et_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_0"
            android:textColor="#FF989898"
            android:textSize="14sp"
            />
        <TextView
            android:padding="@dimen/_4sdp"
            android:id="@+id/tv_all"
            app:layout_constraintEnd_toEndOf="@+id/et_description"
            app:layout_constraintTop_toBottomOf="@+id/et_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_500"
            android:textColor="#FF989898"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tvEco"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingRight="@dimen/page_space"
            android:paddingLeft="@dimen/page_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_write_description"
            android:textColor="#FF999999"
            android:textSize="16sp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/tvValue"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_item_value"
            android:textColor="#ff343434"
            android:textSize="16sp"
            />
        <androidx.constraintlayout.helper.widget.Layer
            android:visibility="gone"
            android:background="@drawable/shape_corner_edit"
            app:constraint_referenced_ids="et_value,tvMoneyFlag"

            app:layout_constraintStart_toEndOf="@+id/tvMoneyFlag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvValue"
            android:id="@+id/lay_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:id="@+id/tvMoneyFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="#ff989898"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_value"
            app:layout_constraintBottom_toBottomOf="@+id/et_value"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/et_value"
            style="@style/AppTheme.EditText"
            android:gravity="top|left"
            android:lines="1"
            android:layout_width="0dp"
            android:padding="@dimen/_10sdp"
            android:inputType="number"
            android:scrollbars="vertical"
            android:layout_marginRight="@dimen/_15sdp"
            app:layout_constraintStart_toEndOf="@+id/tvMoneyFlag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvValue" />


        <TextView
            android:visibility="gone"
            android:gravity="right"
            android:id="@+id/tv_numVa"
            app:layout_constraintEnd_toStartOf="@+id/tv_allVa"
            app:layout_constraintBottom_toBottomOf="@+id/et_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_0"
            android:textColor="#FF989898"
            android:textSize="14sp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_allVa"
            app:layout_constraintEnd_toEndOf="@+id/et_value"
            app:layout_constraintBottom_toBottomOf="@+id/et_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_9"
            android:textColor="#FF989898"
            android:textSize="14sp"
            />


        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/et_value"
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_photo_Transaction"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
        <RadioGroup
            android:visibility="gone"
            android:id="@+id/rg"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvTransaction"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbTypeFree"
                android:layout_marginRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_weight="1"
                android:text="Brand new "
                android:textSize="15sp"
                android:textColor="@drawable/rb_text_select"
                android:checked="true"
                android:background="@drawable/rb_nobtn_selector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbTypeExchange"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:gravity="center"
                android:text="Eco / used"
                android:textSize="15sp"
                android:textColor="@drawable/rb_text_select"
                android:button="@null"
                android:layout_weight="1"
                android:background="@drawable/rb_nobtn_selector"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </RadioGroup>
        <TextView
            android:visibility="gone"
            android:id="@+id/tvType"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="#ff323232"
            android:textSize="16sp"
            />
        <androidx.constraintlayout.helper.widget.Layer
            android:visibility="gone"
            android:background="@drawable/shape_corner_edit"
            app:constraint_referenced_ids="tvShoes,ivDown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvType"
            android:id="@+id/layType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvType"
            android:id="@+id/tvShoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
        <ImageView
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:id="@+id/ivDown"
            app:layout_constraintTop_toTopOf="@+id/tvShoes"
            app:layout_constraintBottom_toBottomOf="@+id/tvShoes"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/page_space"
            android:layout_marginTop="36dp"
            android:layout_marginRight="@dimen/page_space"
            android:background="@drawable/theme_post_button_bg"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/lab_post"
            android:textAllCaps="false"
            android:textColor="@drawable/post_text_select"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/btSaveShare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEco" />

        <Button
            android:visibility="gone"
            android:id="@+id/btSaveShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/theme_button_bg"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/text_share_save"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btSave"
            app:layout_constraintTop_toBottomOf="@+id/tvShoes" />
        <androidx.constraintlayout.helper.widget.Layer
            android:background="#000000"
            android:alpha="0.6"
            android:id="@+id/lyFeature"
            app:constraint_referenced_ids="titleTop,photoFirst,tvFilter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.helper.widget.Layer>
        <TextView
            android:id="@+id/titleTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <ImageView
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/page_space"
            android:layout_marginLeft="@dimen/page_space"
            android:id="@+id/photoFirst"
            android:src="@mipmap/photo_first_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tvFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>
</layout>