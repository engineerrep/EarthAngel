<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.earth.angel.login.SplashActivity" />

        <variable
            name="handler"
            type="SplashActivity" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginBottom="@dimen/_80sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/LoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login" />
    <TextView
        android:layout_marginTop="@dimen/_40sdp"
        android:id="@+id/appTvlibLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_app_name"
        android:textColor="#ff090909"
        style="@style/Theme.BaseTextView"
        android:fontFamily="@font/avenirnext_latobolditalic"
        android:textSize="@dimen/bigText"
        app:layout_constraintTop_toBottomOf="@+id/LoginTitle"
        app:layout_constraintStart_toStartOf="@+id/LoginTitle"
        app:layout_constraintEnd_toEndOf="@+id/LoginTitle"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>