<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/shape_corner_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/lltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_marginBottom="@dimen/_15sdp"
        android:id="@+id/pw_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:src="@mipmap/delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    </RelativeLayout>
        <TextView
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/lltitle"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@+id/tvtype"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/white"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvViewpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View range"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
        <RadioGroup
            android:id="@+id/rg"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvViewpage"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbTypeFree"
                android:layout_marginRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_weight="1"
                android:text="Only othersâ€™ items"
                android:textSize="12sp"
                android:textColor="@drawable/rb_text_select"
                android:lines="1"
                android:background="@drawable/rb_nobtn_selector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbTypeExchange"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:gravity="center"
                android:text="Others and my items"
                android:textSize="12sp"
                android:textColor="@drawable/rb_text_select"
                android:button="@null"
                android:layout_weight="1"
                android:lines="1"
                android:background="@drawable/rb_nobtn_selector"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    <Button
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:text="Reset"
        android:background="@drawable/shape_corner_save"
        app:layout_constraintTop_toBottomOf="@+id/rg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btSaveShare"
        android:id="@+id/btReset"
        android:textSize="15sp"
        android:textColor="@color/themColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <Button
        android:textAllCaps="false"

        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:text="Done"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/rg"
        app:layout_constraintStart_toEndOf="@+id/btReset"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_corner_group_join"
        android:id="@+id/btSaveShare"
        android:textColor="@android:color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>