<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/shape_corner_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/lltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_marginBottom="@dimen/_15sdp"
        android:id="@+id/pw_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:src="@mipmap/delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell  Owner You Want This"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    </RelativeLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:id="@+id/etName"
            style="@style/UserSign.InputText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lltitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Your name (easier to recognize for friends)"
            android:textColor="#ff9a9a9a"
            android:textSize="14sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:id="@+id/etContactInfo"
            style="@style/UserSign.InputText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Contact info"
            android:textColor="#ff9a9a9a"
            android:textSize="14sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:id="@+id/etMessage"
            style="@style/UserSign.InputText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etContactInfo"
            android:layout_width="0dp"
            android:singleLine="false"
            android:gravity="top"
            android:lines="4"
            android:layout_height="wrap_content"
            android:hint="Recommend to communicate via Messenger, Whatsapp, email. You can also message to the item owner here (visible to the owner only)"
            android:textColor="#ff9a9a9a"
            android:textSize="14sp"
            />
    <Button

        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:text="Done"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/etMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_corner_group_join"
        android:id="@+id/btSaveShare"
        android:textColor="@android:color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>