<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.earth.angel.chat.ChatMainFragment"/>
        <variable
            name="handler"
            type="com.earth.angel.chat.ChatMainFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".chat.ChatMainFragment">
    <ImageView
        app:layout_constraintTop_toTopOf="@+id/baseLiwu"
        app:layout_constraintBottom_toBottomOf="@+id/baseLiwu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/base_page"
        android:padding="@dimen/_4sdp"
        android:id="@+id/tvChatMainLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.BaseTextView"
        android:src="@mipmap/arrow_right"
        />
        <TextView
            android:id="@+id/tvLibMinTitleCenter"
            style="@style/Theme.BaseTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_constraintStart_toEndOf="@+id/tvChatMainLogo"
            app:layout_constraintTop_toTopOf="@+id/tvChatMainLogo"
            app:layout_constraintBottom_toBottomOf="@+id/tvChatMainLogo"
            app:layout_constraintEnd_toStartOf="@+id/baseLiwu"
            android:enabled="true"
            android:gravity="center"
            android:lines="1"
            android:text="Message"
            android:textColor="#FF111111"
            android:textSize="18sp" />
    <ImageView
        android:layout_marginRight="@dimen/base_page"
        android:id="@+id/baseLiwu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/message_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/baseLiwu"
            app:layout_constraintTop_toTopOf="@+id/baseLiwu"
            android:id="@+id/LibChatPacketNum"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/base_white"
            android:background="@drawable/base_circle_red"
            android:layout_width="@dimen/radius"
            android:layout_height="@dimen/radius"/>
        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/baseLiwu"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/ChatMainRlv"
            android:layout_marginRight="@dimen/base_page"
            android:layout_marginLeft="@dimen/base_page"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/LibMessageEmpty"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/empty_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                style="@style/Theme.BaseTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:text=""
                android:textColor="#ff555555"
                android:textSize="24sp" />
            <TextView
                android:gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_39sdp"
                android:layout_marginLeft="@dimen/_39sdp"
                style="@style/Theme.BaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_go_find"
                android:textColor="#ff9d9d9d"
                android:textSize="14sp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
