<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="handler"
            type="com.earth.angel.regist.ui.RegistLocationFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".regist.ui.RegistEmailFragment">

        <ImageView
            android:id="@+id/RegistLocationBank"
            android:padding="@dimen/base_page"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingTop="@dimen/base_page"
            android:paddingBottom="@dimen/base_page"
            android:id="@+id/RegistLocationLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Environmental protection, start from the side first"
            android:textColor="#ff090909"
            style="@style/Theme.BaseTextView"
            android:fontFamily="@font/avenirnext_latobolditalic"
            android:textSize="@dimen/bigText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="@dimen/base_page"
            android:layout_marginRight="@dimen/page_space"
            app:layout_constraintTop_toBottomOf="@+id/RegistLocationBank"
            />
        <TextView
            android:id="@+id/RegistLocationContent"
            android:layout_marginRight="@dimen/base_page"
            android:layout_marginLeft="@dimen/base_page"
            app:layout_constraintTop_toBottomOf="@+id/RegistLocationLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Theme.BaseTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Find free items around you by positioning, make environmentalism efficient"
            android:textColor="#ff9d9d9d"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/RegistLocationContet"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/page_space"
            app:layout_constraintTop_toBottomOf="@+id/RegistLocationContent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Theme.BaseTitleTextView"
            android:fontFamily="@font/avenirnext_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Location"
            android:textColor="#ff090909"
            android:textSize="14sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="@dimen/_6sdp"
            android:id="@+id/RegistLocationEt"
            style="@style/UserSign.InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_page"
            android:fontFamily="@font/avenirnext_regular"
            android:hint="Live in"
            android:padding="@dimen/page_space"
            android:textColor="#FF9D9D9D"
            android:layout_marginLeft="@dimen/base_page"
            android:background="@drawable/bg_regist_8"
            android:textColorHint="#FF555555"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/RegistLocationContet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_marginBottom="@dimen/_60sdp"
            android:paddingTop="@dimen/btn_margin"
            android:paddingBottom="@dimen/btn_margin"
            android:layout_marginRight="@dimen/base_page"
            android:layout_marginLeft="@dimen/base_page"
            android:background="@drawable/bg_corners_shopp_28"
            android:gravity="center"
            android:fontFamily="@font/avenirnext_latobold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/nextBtn"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
