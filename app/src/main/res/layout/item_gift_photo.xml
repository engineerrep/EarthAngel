<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.helper.widget.Layer
        app:constraint_referenced_ids="iv_thumb"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/lay_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.earth.libbase.view.ShapedImageView
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@drawable/shape_corner_edit"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:round_radius="@dimen/_8sdp"
        app:shape_mode="round_rect" />

    <com.earth.libbase.view.ShapedImageView
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/iv_thumbView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@drawable/shape_gift_bg"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:round_radius="@dimen/_8sdp"
        app:shape_mode="round_rect" />
    <TextView
        app:layout_constraintEnd_toEndOf="@+id/iv_thumbView"
        app:layout_constraintStart_toStartOf="@+id/iv_thumbView"
        app:layout_constraintBottom_toBottomOf="@+id/iv_thumbView"
        app:layout_constraintTop_toTopOf="@+id/iv_thumbView"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:text="+3"
        android:id="@+id/iv_thumbnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>