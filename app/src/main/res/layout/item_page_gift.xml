<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/page_space"
    android:layout_marginRight="@dimen/page_space"
    android:background="@drawable/shape_corner_8sp_wite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.earth.libbase.view.ShapedImageView
        android:id="@+id/ivHead"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        app:round_radius="@dimen/_8sdp"
        app:shape_mode="circle"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"/>
    <ImageView
        android:id="@+id/followed"
        app:layout_constraintEnd_toEndOf="@+id/ivHead"
        app:layout_constraintBottom_toBottomOf="@+id/ivHead"
        android:src="@mipmap/follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="@dimen/_10sdp"
        android:id="@+id/follTV"
        app:layout_constraintEnd_toEndOf="@+id/ivHead"
        app:layout_constraintBottom_toBottomOf="@+id/ivHead"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"/>
    <TextView
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/tvName"
        style="@style/AppTheme.TextView"
        app:layout_constraintStart_toEndOf="@+id/ivHead"
        app:layout_constraintEnd_toStartOf="@+id/ivMore"
        app:layout_constraintTop_toTopOf="@+id/ivHead"
        app:layout_constraintBottom_toBottomOf="@+id/ivHead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text=""
        android:gravity="left"
        android:textColor="#ff111111"
        android:textSize="18sp"
        />
    <com.earth.libbase.view.ShapedImageView
        android:padding="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:id="@+id/ivMore"
        android:src="@mipmap/report"
        app:layout_constraintTop_toTopOf="@+id/ivHead"
        app:layout_constraintBottom_toBottomOf="@+id/ivHead"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingRight="@dimen/page_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHead"

        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff787878"
        android:textSize="16sp"
        />

    <TextView
        android:layout_marginTop="@dimen/_6sdp"
        android:id="@+id/tvMessage"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:layout_width="0dp"
        android:gravity="left"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff343434"
        android:textSize="14sp"
        />

    <com.earth.libbase.view.ShapedImageView
        android:id="@+id/ivGift"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="w,1:1"
        android:scaleType="centerCrop"
        app:round_radius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:shape_mode="round_rect"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/gift_details_sent"
        app:layout_constraintEnd_toEndOf="@+id/ivGift"
        app:layout_constraintStart_toStartOf="@+id/ivGift"
        app:layout_constraintTop_toTopOf="@+id/ivGift"
        app:layout_constraintBottom_toBottomOf="@+id/ivGift"
        android:src="@mipmap/gift_details_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.helper.widget.Layer
        android:visibility="gone"
        android:background="@drawable/shape_corner_group_gift"
        app:constraint_referenced_ids="ivFree,tvFree"
        app:layout_constraintEnd_toEndOf="@+id/ivGift"
        app:layout_constraintTop_toTopOf="@+id/ivGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:paddingBottom="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:id="@+id/ivFree"
        app:layout_constraintTop_toTopOf="@+id/ivGift"
        app:layout_constraintEnd_toStartOf="@+id/tvFree"
        android:src="@mipmap/exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="@dimen/_10sdp"
        android:id="@+id/tvFree"
        app:layout_constraintTop_toTopOf="@+id/ivGift"
        app:layout_constraintEnd_toEndOf="@+id/ivGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        />
    <LinearLayout
        android:weightSum="1"
        app:layout_constraintStart_toStartOf="@+id/ivGift"
        app:layout_constraintEnd_toEndOf="@+id/ivGift"
        app:layout_constraintTop_toBottomOf="@+id/ivGift"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llCollect"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivCollect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivGift"
                android:src="@mipmap/collection_un"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvFavorited"
                app:layout_constraintStart_toEndOf="@+id/ivCollect"
                app:layout_constraintTop_toTopOf="@+id/ivCollect"
                app:layout_constraintBottom_toBottomOf="@+id/ivCollect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lab_Favorite"
                android:textColor="#ff323232"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_weight="0.5"
            android:id="@+id/llMessage"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivMessage"
                android:src="@mipmap/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textColor="#ff323232"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivMessage"
                app:layout_constraintStart_toEndOf="@+id/ivMessage"
                app:layout_constraintTop_toTopOf="@+id/ivMessage" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:padding="@dimen/_10sdp"
            android:layout_weight="0.3"
            android:id="@+id/llShare"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivShare"
                app:layout_constraintEnd_toStartOf="@+id/tvShare"
                app:layout_constraintTop_toBottomOf="@+id/ivGift"
                android:src="@mipmap/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingRight="@dimen/_10sdp"
                android:id="@+id/tvShare"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivShare"
                app:layout_constraintBottom_toBottomOf="@+id/ivShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textColor="#ff323232"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>