<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_3sdp"
    android:paddingBottom="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvReport"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivReport"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:text="Items required to charge"
        android:textColor="#FF333333"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/ivReport"
        app:layout_constraintTop_toTopOf="@+id/tvReport"
        app:layout_constraintBottom_toBottomOf="@+id/tvReport"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/report_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>