<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="right">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="@dimen/page_space"
        android:background="@drawable/pop_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_chat"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="@dimen/_10sdp"
                android:src="@mipmap/pop_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"
                style="@style/AppTheme.TextView"
                android:id="@+id/pop_chat"
                android:text="@string/text_New_Chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="@dimen/_10sdp"

                android:src="@mipmap/pop_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"
                style="@style/AppTheme.TextView"
                android:id="@+id/pop_search"
                android:text="@string/text_Add_Contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>