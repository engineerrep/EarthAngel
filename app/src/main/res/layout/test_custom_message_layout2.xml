<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_message"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.earth.libbase.view.ShapedImageView
        android:id="@+id/ivHead"
        android:scaleType="centerCrop"
        app:round_radius="@dimen/_15sdp"
        android:background="#339C61"
        app:shape_mode="round_rect"
        android:layout_width="@dimen/_68sdp"
        android:layout_height="@dimen/_68sdp"/>

    <TextView
        android:layout_toRightOf="@+id/ivHead"
        android:layout_centerVertical="true"
        android:id="@+id/test_custom_message_tv"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/_138sdp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:textColor="#fff"
        android:textSize="15sp" />

</RelativeLayout>

