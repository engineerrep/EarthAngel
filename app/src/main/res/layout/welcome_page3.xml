<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginLeft="@dimen/base_page"
        android:id="@+id/tvSend"
        android:fontFamily="@font/avenirnext_latobolditalic"
        style="@style/Theme.BaseTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Community Nearby"
        android:textColor="#ff090909"
        android:textSize="28sp"
        />
    <TextView
        android:layout_marginRight="@dimen/base_page"
        app:layout_constraintStart_toStartOf="@+id/tvSend"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin12"
        app:layout_constraintTop_toBottomOf="@+id/tvSend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Try to create a community nearby. You've never been so close to so many items."
        android:textColor="#ff9d9d9d"
        android:textSize="14sp"
        />
    <ImageView
        android:id="@+id/ivPhoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/luobo_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/LibStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_marginRight="@dimen/margin50"
        android:background="@drawable/bg_corners_shopp_28_side"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPhoto">

        <TextView
            style="@style/Theme.BaseTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btnMargin"
            android:layout_marginBottom="@dimen/btnMargin"
            android:text="Start Now"
            android:textColor="#ff6cc24b"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>