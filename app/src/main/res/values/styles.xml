<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themColor</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/themColor</item>
    </style>
    <style name="AppTheme.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/text_theme_hint</item>
    </style>
    <style name="UserSign.InputText" parent="@style/AppTheme.EditText">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">#ff9a9a9a</item>
        <item name="android:textColorHint">@color/login_hint</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/avenirnext_regular</item>
        <item name="android:paddingTop">@dimen/etMain</item>
        <item name="android:paddingBottom">@dimen/etMain</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
    <style name="AppTheme.ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.ToolBar.MenuTextView" parent="@style/AppTheme.TextView">
        <item name="android:textColor">@color/top_bar_menu_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.ToolBar.MenuImageView" parent="@style/AppTheme.ImageView">
        <item name="android:textColor">@color/top_bar_menu_color</item>
    </style>
    <style name="AppTheme.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/text_theme_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:background">@null</item>
        <item name="android:lineSpacingMultiplier">1.2</item>

    </style>
    <!-- popupWindow动画（屏幕底部弹出pw动画） -->
    <style name="PopupWindowAnimationBottomToTop">
        <item name="android:windowEnterAnimation">@anim/base_pw_bottom_show</item>
        <item name="android:windowExitAnimation">@anim/base_pw_bottom_hide</item>
    </style>
    <style name="Photo.Button" parent="@style/AppTheme">
        <item name="android:layout_width">108dip</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:background">@drawable/shape_upload_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="UserSign.LoginButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="dialogstyle">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="popwindowAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popup_show</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_exit</item>
    </style>
</resources>