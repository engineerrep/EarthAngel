<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.earth.libarticl.ArticleTextActivity"/>
        <variable
            name="handler"
            type="com.earth.libarticl.ArticleTextActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ArticleTextActivity">

            <WebView
                android:id="@+id/ArticleTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/base_page"
            android:id="@+id/ArticleImageViewBank"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@mipmap/base_product_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
