<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/base_page"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivMainBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/main_post_bg"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivGroupInter"
        android:layout_marginRight="@dimen/_48sdp"
        android:layout_marginBottom="@dimen/_48sdp"
        app:layout_constraintBottom_toBottomOf="@+id/ivMainBg"
        app:layout_constraintEnd_toEndOf="@+id/ivMainBg"
        android:src="@mipmap/group_inter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="@dimen/base_page"
        android:id="@+id/ivMainMessage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/base_main_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintEnd_toEndOf="@+id/ivMainMessage"
        app:layout_constraintTop_toTopOf="@+id/ivMainMessage"
        android:id="@+id/ivMainMessageNum"
        android:gravity="center"
        android:textSize="8sp"
        android:visibility="gone"
        android:textColor="@color/base_white"
        android:background="@drawable/base_circle_red"
        android:layout_width="@dimen/radius"
        android:layout_height="@dimen/radius"/>
    <TextView
        style="@style/Theme.BaseTitleTextView"
        android:id="@+id/tvMainTitle"
        android:layout_marginTop="@dimen/base_page"
        android:layout_marginLeft="@dimen/base_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMainBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eco Credit Details"
        android:textColor="#ff000000"
        android:textSize="20sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>