<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="handler"
            type="com.earth.libhome.group.GroupNameFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".group.GroupNameFragment">
        <ImageView
            android:id="@+id/groupNameIv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvLibHomeLeftTool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/arrow_right" />
        <androidx.constraintlayout.helper.widget.Layer
            app:constraint_referenced_ids="viewLine,viewBottomLine"
            app:layout_constraintTop_toTopOf="@+id/viewLine"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_shopp_white_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="@dimen/_40sdp"
            android:id="@+id/viewLine"
            app:layout_constraintEnd_toEndOf="@+id/groupNameIv"
            app:layout_constraintStart_toStartOf="@+id/groupNameIv"
            app:layout_constraintBottom_toBottomOf="@+id/groupNameIv"
            app:layout_constraintTop_toTopOf="@+id/groupNameIv"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tvCreateCommunity"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@+id/viewLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Theme.BaseTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create community"
            android:textColor="#ff000000"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tvLocation"
            android:gravity="center"
            android:layout_marginRight="@dimen/base_page"
            android:layout_marginLeft="@dimen/base_page"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvCreateCommunity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Theme.BaseTextView"
            android:fontFamily="@font/avenirnext_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can create a community based on location to help people nearby to exchange products."
            android:textColor="#ff9d9d9d"
            android:textSize="14sp"
            />
        <TextView
            style="@style/Theme.BaseTitleTextView"
            android:layout_marginLeft="@dimen/base_page"
            android:id="@+id/tvCommunity"
            android:layout_marginTop="@dimen/margin54"
            app:layout_constraintTop_toBottomOf="@+id/tvLocation"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community name"
            android:textColor="#ff000000"
            android:textSize="16sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/LibMineEtNameFirst"
            style="@style/BaseUserSign.InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_page"
            android:fontFamily="@font/avenirnext_regular"
            android:hint="Name"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_28sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="#FF9D9D9D"
            android:layout_marginLeft="@dimen/base_page"
            android:background="@drawable/bg_regist_8"
            android:textColorHint="#FF555555"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvCommunity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageView
            android:id="@+id/LibMineEtNameFirstClosed"
            android:visibility="gone"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="@+id/LibMineEtNameFirst"
            app:layout_constraintBottom_toBottomOf="@+id/LibMineEtNameFirst"
            app:layout_constraintTop_toTopOf="@+id/LibMineEtNameFirst"
            android:src="@mipmap/group_closed"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <Button
            android:layout_marginTop="@dimen/_40sdp"
            android:paddingTop="@dimen/btn_margin"
            android:paddingBottom="@dimen/btn_margin"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:background="@drawable/base_theme_button_bg"
            android:gravity="center"
            android:enabled="true"
            style="@style/BaseUserSign.LoginButton"
            android:fontFamily="@font/avenirnext_latobold"
            app:layout_constraintBottom_toTopOf="@+id/viewBottomLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/LibCreateDone"
            android:textSize="18sp"
            android:textColor="@color/base_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue" />
        <View
            android:id="@+id/viewBottomLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_page"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
