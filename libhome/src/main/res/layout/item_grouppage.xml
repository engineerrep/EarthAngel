<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/base_page"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="@dimen/base_page"
        android:layout_marginRight="@dimen/base_page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:background="@mipmap/grouplist_bg"
        android:paddingBottom="@dimen/margin20"
        android:layout_height="wrap_content">
        <com.earth.libbase.view.ShapedImageView
            android:layout_marginTop="@dimen/base_page"
            android:layout_marginLeft="@dimen/base_page"
            android:id="@+id/itemHead1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/margin88"
            android:layout_height="@dimen/margin88"
            android:scaleType="centerCrop"
            app:shape_mode="circle"
            android:src="@mipmap/base_comm_img" />
        <TextView
            android:layout_marginLeft="@dimen/margin16"
            android:layout_marginTop="@dimen/margin8"
            android:id="@+id/itemName"
            app:layout_constraintStart_toEndOf="@+id/itemHead1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itemHead1"
            android:fontFamily="@font/avenirnext_latobold"
            android:maxLines="2"
            style="@style/Theme.BaseTitleTextView"
            android:gravity="top|left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF555555"
            android:textSize="18sp"
            />

        <TextView
            android:layout_marginTop="@dimen/margin12"
            android:id="@+id/tvNum"
            app:layout_constraintStart_toStartOf="@+id/itemName"
            app:layout_constraintTop_toBottomOf="@+id/itemName"
            style="@style/Theme.BaseTextView"
            android:fontFamily="@font/avenirnext_latobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="123 peoples"
            android:textColor="#FF9D9D9D"
            android:textSize="14sp"
            />
        <ImageView
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/itemHead1"
            app:layout_constraintTop_toTopOf="@+id/itemLLProduct"
            app:layout_constraintBottom_toBottomOf="@+id/itemLLProduct"
            android:id="@+id/groupMineIv"
            android:src="@mipmap/group_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:id="@+id/itemLLProduct"
            android:paddingRight="@dimen/base_page"
            app:layout_constraintTop_toBottomOf="@+id/itemHead1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_corners_themcolor_20"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="@dimen/margin10"
                android:src="@mipmap/group_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvItemNum"
                style="@style/Theme.BaseTextView"
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenirnext_medium"
                android:layout_height="wrap_content"
                android:text="12 New products"
                android:textColor="@color/BaseThemColor"
                android:textSize="14sp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>