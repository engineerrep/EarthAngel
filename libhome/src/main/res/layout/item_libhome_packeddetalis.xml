<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_regist_8"
        android:paddingRight="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.earth.libbase.view.ShapedImageView
        android:id="@+id/ivImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:round_radius="@dimen/_8sdp"
        app:shape_mode="round_rect"
        android:src="@mipmap/base_img_loding"
        android:layout_width="@dimen/_66sdp"
        android:layout_height="@dimen/_66sdp"/>
    <ImageView
        android:visibility="gone"
        android:padding="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/ivImage"
        app:layout_constraintEnd_toEndOf="@+id/ivImage"
        app:layout_constraintTop_toTopOf="@+id/ivImage"
        app:layout_constraintBottom_toBottomOf="@+id/ivImage"
        android:id="@+id/MinePopAddShiXiao"
        android:src="@mipmap/base_shixiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        style="@style/Theme.BaseTextView"
        app:layout_constraintTop_toTopOf="@+id/ivImage"
        app:layout_constraintBottom_toBottomOf="@+id/ivImage"
        app:layout_constraintStart_toEndOf="@+id/ivImage"
        app:layout_constraintEnd_toStartOf="@+id/MinePopAdd"
        android:id="@+id/tvText"
        android:gravity="top|left"
        android:layout_width="0dp"
        android:lines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff555555"
        android:textSize="14sp"
        />
    <ImageView
        app:layout_constraintBottom_toBottomOf="@+id/ivImage"
        app:layout_constraintTop_toTopOf="@+id/ivImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvText"
        android:id="@+id/MinePopAdd"
        android:src="@mipmap/cart_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>