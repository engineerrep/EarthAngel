<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_page"
    android:background="@drawable/bg_regist_8"
    android:paddingLeft="@dimen/base_page"
    android:paddingRight="@dimen/base_page"
    android:paddingBottom="@dimen/_12sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.earth.libbase.view.ShapedImageView
        android:id="@+id/ivImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"

        android:src="@mipmap/group_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/ivName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivImage"
        style="@style/Theme.BaseTextView"
        android:gravity="center|top"
        android:layout_width="@dimen/_107sdp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="Edit cover photo "
        android:textColor="#ff555555"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/ivDown"
        android:layout_marginTop="@dimen/base_page"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/ivImage"
        app:layout_constraintStart_toStartOf="@+id/ivImage"
        app:layout_constraintTop_toBottomOf="@+id/ivName"
        android:background="@drawable/bg_themcolor_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Now"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        />

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/base_page"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/llDown"
            app:layout_constraintEnd_toEndOf="@+id/ivImage"
            app:layout_constraintStart_toStartOf="@+id/ivImage"
            app:layout_constraintTop_toBottomOf="@+id/ivName"
            android:background="@drawable/bg_greecolor_16"

            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/group_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>