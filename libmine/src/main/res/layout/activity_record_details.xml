<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".record.RecordDetailsActivity">
        <include layout="@layout/libmine_titlebar"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ivLibmineContent"
            android:layout_marginLeft="@dimen/base_page"
            android:layout_marginRight="@dimen/base_page"
            android:background="@drawable/base_biankuang_chatme_8"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/rlLibMineBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.earth.libbase.view.ShapedImageView
                android:id="@+id/ivlibHomeGiftImage"
                android:layout_width="@dimen/head_record"
                android:layout_height="@dimen/head_record"
                android:layout_marginLeft="@dimen/base_page"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@mipmap/base_comm_img"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:round_radius="@dimen/_8sdp"
                app:shape_mode="round_rect" />
            <TextView
                android:id="@+id/tvlibHomeGift"
                app:layout_constraintBottom_toBottomOf="@+id/ivlibHomeGiftImage"
                app:layout_constraintTop_toTopOf="@+id/ivlibHomeGiftImage"
                app:layout_constraintStart_toEndOf="@+id/ivlibHomeGiftImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/Theme.BaseTextView"
                android:layout_marginRight="@dimen/base_page"
                android:layout_marginLeft="@dimen/base_page"
                android:fontFamily="@font/avenirnext_regular"
                android:text=""
                android:textColor="#ff555555"
                android:textSize="14sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/ivLibMineAsk"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/base_page"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@+id/ivLibmineContent"
            android:fontFamily="@font/avenirnext_latobold"
            style="@style/Theme.BaseTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask for way"
            android:textColor="#ff555555"
            android:textSize="16sp"
            />
        <ImageView
            android:layout_marginRight="@dimen/_6sdp"
            android:id="@+id/ivLibHomeTree"
            app:layout_constraintEnd_toStartOf="@+id/tvLibHomeTree"
            app:layout_constraintTop_toTopOf="@+id/ivLibMineAsk"
            app:layout_constraintBottom_toBottomOf="@+id/ivLibMineAsk"
            android:src="@mipmap/record_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvLibHomeTree"
            android:layout_marginLeft="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivLibMineAsk"
            app:layout_constraintBottom_toBottomOf="@+id/ivLibMineAsk"
            android:layout_marginRight="@dimen/base_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free"
            android:textColor="#ff6cc24b"
            android:textSize="16sp"
            />
        <View
            android:layout_marginLeft="@dimen/base_page"
            android:layout_marginRight="@dimen/base_page"
            android:alpha="0.15"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintTop_toBottomOf="@+id/ivLibHomeTree"
            android:id="@+id/itemLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#FF9D9D9D" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tvLibMineAddressCl"
            android:layout_marginTop="@dimen/base_page"
            android:paddingBottom="@dimen/base_page"
            android:layout_marginLeft="@dimen/base_page"
            android:layout_marginRight="@dimen/base_page"
            android:background="@drawable/base_biankuang_chatme_8"
            app:layout_constraintTop_toBottomOf="@+id/itemLine"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/base_page"
                android:layout_marginTop="@dimen/base_page"
                android:id="@+id/tvLibMineAddressTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/avenirnext_latobold"
                style="@style/Theme.BaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup address"
                android:textColor="#ff555555"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tvLibMineAddress"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/base_page"
                app:layout_constraintTop_toBottomOf="@+id/tvLibMineAddressTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5412 California St"
                android:textColor="#ff9d9d9d"
                android:textSize="14sp"
                />
            <ImageView
                android:id="@+id/tvLibMineAddressCopy"
                android:layout_marginRight="@dimen/base_page"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/record_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tvLibMineOrderCl"
            android:layout_marginTop="@dimen/base_page"
            android:paddingBottom="@dimen/base_page"
            android:layout_marginLeft="@dimen/base_page"
            android:layout_marginRight="@dimen/base_page"
            android:background="@drawable/base_biankuang_chatme_8"
            app:layout_constraintTop_toBottomOf="@+id/tvLibMineAddressCl"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/base_page"
                android:layout_marginTop="@dimen/base_page"
                android:id="@+id/tvLibMineOrderTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/avenirnext_latobold"
                style="@style/Theme.BaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order information"
                android:textColor="#ff555555"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tvLibMineOrder"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/base_page"
                app:layout_constraintTop_toBottomOf="@+id/tvLibMineOrderTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5412 California St"
                android:textColor="#ff9d9d9d"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tvLibMineOrderDate"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/base_page"
                app:layout_constraintTop_toBottomOf="@+id/tvLibMineOrder"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5412 California St"
                android:textColor="#ff9d9d9d"
                android:textSize="14sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
