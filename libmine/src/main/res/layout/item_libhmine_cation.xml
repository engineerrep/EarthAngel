<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.earth.libbase.view.ShapedImageView
        android:id="@+id/ItemCation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        app:round_radius="@dimen/_8sdp"
        app:shape_mode="round_rect"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/ItemCationTV"
        android:fontFamily="@font/avenirnext_semibold"
        android:lines="1"
        style="@style/Theme.BaseTextView"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/ItemCation"
        app:layout_constraintStart_toStartOf="@+id/ItemCation"
        app:layout_constraintEnd_toEndOf="@+id/ItemCation"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff9d9d9d"
        android:textSize="16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>